<div class="pagination-controls">
  <button class="pagination-button" disabled={{this.isFirstPage}} type="button" {{on "click" this.previousPage}}><i class="fa fa-arrow-left" aria-hidden="true"></i>
</button>
  <span class="pagination-info">{{this.page}} of {{this.totalPages}}</span>
  <button class="pagination-button" disabled={{this.isLastPage}} type="button" {{on "click" this.nextPage}}><i class="fa fa-arrow-right" aria-hidden="true"></i>
</button>
</div>
